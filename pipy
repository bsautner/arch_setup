sudo apt-get update
sudo apt-get upgrade -y
wget http://repo.mosquitto.org/debian/mosquitto-repo.gpg.key
sudo apt-key add mosquitto-repo.gpg.key
cd /etc/apt/sources.list.d/
sudo wget https://repo.mosquitto.org/debian/mosquitto-bullseye.list
cd ~
sudo apt-get install build-essential python-dev install python3-pip libgpiod2 git  mosquitto mosquitto-clients -y --upgrade 

bash -c 'echo "dtoverlay=w1-gpio" >> /boot/config.txt
sudo apt install default-jdk
git clone https://github.com/adafruit/Adafruit_Python_DHT.git
cd Adafruit_Python_DHT
sudo python setup.py install
sudo pip3 install Adafruit_Python_DHT
pip3 install adafruit-circuitpython-dht
sudo apt-get install 
sudo apt install pip3
sudo pip3 install --upgrade setuptools
pip3 install --upgrade setuptools

pip3 install --upgrade adafruit-python-shell
wget https://raw.githubusercontent.com/adafruit/Raspberry-Pi-Installer-Scripts/master/raspi-blinka.py
sudo python3 raspi-blinka.py 
sudo pip3 install adafruit-python-shell

sudo systemctl enable mosquitto
sudo systemctl start mosquitto
sudo reboot
